<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gifsart.studio.activity.GiphyActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/giphy_rec_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:scrollbars="vertical" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/giphy_search_icon"
        fab:fab_colorNormal="#0192E6"
        fab:fab_colorPressed="#51B220"
        fab:fab_colorRipple="#D1E87E" />

</RelativeLayout>
