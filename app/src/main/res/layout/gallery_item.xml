<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/item_backgroud"
    android:padding="0dp">

    <ImageView
        android:id="@+id/gallery_image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/file_type_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gif_icon" />


    <ImageView
        android:id="@+id/file_type_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/video_icon" />

    <ImageView
        android:id="@+id/gallery_item_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/on_focus_checkbox"
        android:padding="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right|top"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/pink"
        android:text="0"
        android:textColor="@color/font_main_color" />

</FrameLayout>