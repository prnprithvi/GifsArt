<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gifsart.studio.activity.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/reset_password_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_alignParentTop="true"
        android:background="@color/navigation_bar_color">

        <ImageButton
            android:id="@+id/reset_password_activity_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Reset Password"
            android:textColor="@color/font_main_color"
            android:textSize="25dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Forgot your password?\nNoworries!"
        android:textColor="@color/font_main_color" />

    <EditText
        android:id="@+id/reset_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@color/font_main_color"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:imeOptions="actionDone"
        android:singleLine="true" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_password_edit_text"
        android:layout_marginTop="20dp"
        android:background="@color/pink"
        android:text="Reset Password"
        android:textColor="@color/font_main_color" />

</LinearLayout>
