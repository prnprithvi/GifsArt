<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="500dp"
    android:layout_height="500dp"
    android:background="@color/item_backgroud"
    android:padding="0dp">

    <ImageView
        android:id="@+id/gallery_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/on_focus_checkbox"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/file_type_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/gallery_item_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/on_focus_checkbox" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right|top"
        android:background="@color/pink"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/font_main_color" />

</FrameLayout>